generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  pets Pet[]
}

model Pet {
  id        String   @id @default(uuid())
  name      String
  birthDate DateTime
  breed     String
  size      String
  gender    String

  user   User   @relation(fields: [userId], references: [id])
  userId String
}
